{
    "enqueue_style": [
        "../assets/bootstrap-5.3.1-dist/css/bootstrap.min.css",
        "../assets/css/style.css",
        "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    ],
    "enqueue_script": [
        "../assets/bootstrap-5.3.1-dist/js/bootstrap.bundle.min.js",
        "../assets/js/jquery-3.7.1.min.js"
    ],
    "enqueue_script_footer": [
        "../assets/js/index.js"
    ],

    "form": {
        "EditProduct":{
            "action": "edit_product",
            "method": "POST",
            "enctype": "multipart/form-data",
            "class": "form-horizontal",
            "id": "EditProduct",
            "submit": "Save",
            "fields": [
                {
                    "type": "hidden",
                    "name": "รหัสสินค้า",
                    "id": "product_id"
                },
                {
                    "type": "text",
                    "name": "ชื่อสินค้า",
                    "id": "product_name",
                    "placeholder": "Enter name",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "select",
                    "name": "ประเภทสินค้า",
                    "id": "product_type",
                    "placeholder": "Enter type",
                    "value": "",
                    "size": "6",
                    "required": true,
                    "options": [
                        {
                            "value": "1",
                            "text": "เสื้อผ้า"
                        },
                        {
                            "value": "2",
                            "text": "รองเท้า"
                        },
                        {
                            "value": "3",
                            "text": "กระเป๋า"
                        },
                        {
                            "value": "4",
                            "text": "เครื่องประดับ"
                        },
                        {
                            "value": "5",
                            "text": "อุปกรณ์อื่นๆ"
                        }
                    ]
                },
                {
                    "type": "text",
                    "name": "ราคาสินค้า",
                    "id": "product_price",
                    "placeholder": "Enter price",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "text",
                    "name": "จำนวนสินค้า",
                    "id": "product_stock",
                    "placeholder": "Enter quantity",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "file",
                    "name": "รูปภาพสินค้า",
                    "id": "product_img",
                    "placeholder": "Enter image",
                    "value": "",
                    "size": "12",
                    "required": true
                },
                {
                    "type": "textarea",
                    "name": "รายละเอียดสินค้า",
                    "id": "product_detail",
                    "placeholder": "Enter detail",
                    "value": "",
                    "size": "12",
                    "rows": "5",
                    "required": true
                }

            ]
        }
    }
}