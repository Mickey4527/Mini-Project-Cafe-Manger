{
    "enqueue_style": [
        "../assets/bootstrap-5.3.1-dist/css/bootstrap.min.css",
        "../assets/css/style.css",
        "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    ],
    "enqueue_script": [
        "../assets/bootstrap-5.3.1-dist/js/bootstrap.bundle.min.js",
        "../assets/js/jquery-3.7.1.min.js"
    ],
    "enqueue_script_footer": [
        "../assets/js/index.js"
    ],

    "form": {
        "Product":{
            "action": "edit_product",
            "method": "POST",
            "enctype": "multipart/form-data",
            "class": "form-horizontal",
            "id": "EditProduct",
            "submit": "Save",
            "fields": [
                {
                    "type": "hidden",
                    "name": "รหัสสินค้า",
                    "id": "product_id"
                },
                {
                    "type": "text",
                    "name": "ชื่อสินค้า",
                    "id": "product_name",
                    "placeholder": "Enter name",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "select",
                    "name": "หมวดหมู่เตรื่องดื่ม",
                    "id": "product_type",
                    "placeholder": "เลือกหมวดหมู่",
                    "value": "",
                    "size": "6",
                    "required": true,
                    "pull_data": "categories",
                    "options": [
                        {
                            "value": "cat_id",
                            "text": "cat_name"
                        }
                    ]
                },
                {
                    "type": "text",
                    "name": "ราคาสินค้า",
                    "id": "product_price",
                    "placeholder": "Enter price",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "text",
                    "name": "จำนวนสินค้า",
                    "id": "product_stock",
                    "placeholder": "Enter quantity",
                    "value": "",
                    "size": "6",
                    "required": true
                },
                {
                    "type": "file",
                    "name": "รูปภาพสินค้า",
                    "id": "product_img",
                    "placeholder": "Enter image",
                    "value": "",
                    "size": "12",
                    "required": true
                },
                {
                    "type": "date",
                    "name": "วันที่เพิ่มสินค้า",
                    "id": "date_added",
                    "placeholder": "Enter date",
                    "value": "",
                    "size": "12",
                    "required": true
                },
                {
                    "type": "textarea",
                    "name": "รายละเอียดสินค้า",
                    "id": "product_desc",
                    "placeholder": "Enter detail",
                    "value": "",
                    "size": "12",
                    "rows": "5",
                    "required": true
                }
            ]
        },
        "categories":{
            "fields": [
                {
                    "type":"text",
                    "name":"ชื่อหมวดหมู่",
                    "id":"cat_name",
                    "placeholder":"Enter name",
                    "value":"",
                    "size":"6",
                    "required":true
                },
                {
                    "type":"color",
                    "name":"สีหมวดหมู่",
                    "id":"cat_color",
                    "placeholder":"Enter color",
                    "value":"",
                    "size":"6",
                    "required":true
                },
                {
                    "type":"textarea",
                    "name":"รายละเอียดหมวดหมู่",
                    "id":"cat_desc",
                    "placeholder":"Enter detail",
                    "value":"",
                    "size":"12",
                    "rows":"5",
                    "required":true
                }
            ]
        }
    }
}